<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SurfaceCameraResult">


    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="241dp"
            android:layout_height="246dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_gravity="top|left"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="TextView"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="112dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="267dp"
            android:layout_height="227dp"
            android:layout_gravity="center_horizontal|center"
            android:scaleType="fitCenter"
            tools:layout_editor_absoluteX="446dp"
            tools:layout_editor_absoluteY="377dp" />


    </TableRow>

    <TableRow
        android:id="@+id/tableRow1a"
        android:layout_width="974dp"
        android:layout_height="30dp"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/status"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_gravity="top|left"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="Status"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="112dp" />

        <TextView
            android:id="@+id/statusresult"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_gravity="top|left"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:text="Status result"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="112dp" />


    </TableRow>


    <TableRow
        android:id="@+id/tableRow2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/taskid"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:paddingLeft="25dp"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="617dp" />


    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:text="Finish / terminar"
            tools:layout_editor_absoluteX="532dp"
            tools:layout_editor_absoluteY="680dp" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/retake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:text="Retake Photo / retomar la foto"
            tools:layout_editor_absoluteX="608dp"
            tools:layout_editor_absoluteY="1194dp" />

    </TableRow>





</TableLayout>